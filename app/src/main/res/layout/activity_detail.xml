<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.detail.DetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen + textos en fila -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hobbit"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvBookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="El Hobbit"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="J.R.R. Tolkien"/>

                <TextView
                    android:id="@+id/tvMeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 páginas · 1937"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Tags -->
        <TextView
            android:id="@+id/tvTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasía, Aventura"
            android:layout_marginTop="8dp"/>

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El Hobbit es una novela de fantasía publicada en 1937..."
            android:layout_marginTop="12dp"/>

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
